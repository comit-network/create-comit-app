        "axios": "^0.19.0",
        "bcoin": "https://github.com/bcoin-org/bcoin#2496acc7a98a43f00a7b5728eb256877c1bbf001",
        "blgr": "^0.1.7",
        "comit-sdk": "^0.5.6",
